<%- include("includes/header") %>
<div class="container py-md-5 container--narrow">
  <%- include("includes/flash") %> <%- include("includes/profileShare") %>

  <div class="list-group">
    <% posts.forEach((post)=>{ %>
    <a
      href="/post/<%=post._id%>"
      class="list-group-item list-group-item-action"
    >
      <img
        class="avatar-tiny"
        src="http://www.shaadidesk.com/wp-content/uploads/2015/08/create-profile.png"
      />
      <strong><%= post.title %></strong> on
      <%=post.createdDate.getDate()%>/<%=post.createdDate.getMonth() +
      1%>/<%=post.createdDate.getFullYear()%>
    </a>
    <% }); %>
  </div>
</div>

<%- include("includes/footer") %>
